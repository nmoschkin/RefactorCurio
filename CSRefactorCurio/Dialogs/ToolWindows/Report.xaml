        <TreeView
            x:Name="ProjTree"
            Grid.Row="1"
            Background="Transparent"
            ItemContainerStyle="{StaticResource BeautifulStyle}"
            ItemsSource="{Binding SelectedReport.Reports}"
            MouseDoubleClick="ProjTree_MouseDoubleClick"
            SelectedItemChanged="ProjTree_SelectedItemChanged" />

        <Grid Grid.Row="2" toolkit:Themes.UseVsTheme="True">

            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Button
                Grid.Column="3"
                Margin="8"
                toolkit:Themes.UseVsTheme="True"
                Command="{Binding RunReportCommand}"
                Content="{glob:Translate ResourceKey=RUN_SELECTED_REPORT}" />
