    xmlns:toolkit="clr-namespace:Community.VisualStudio.Toolkit;assembly=Community.VisualStudio.Toolkit"
    xmlns:viewmodels="clr-namespace:CSRefactorCurio.ViewModels"
    Width="600"
    Height="400"
    d:DataContext="{d:DesignInstance Type=viewmodels:ReportViewModel}"
    d:DesignHeight="400"
    d:DesignWidth="600"
    toolkit:Themes.UseVsTheme="True"
    mc:Ignorable="d">
    <platform:DialogWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/CSRefactorCurio;component/Styles/TreeStyles.xaml" />
                <ResourceDictionary Source="/CSRefactorCurio;component/Styles/ExplorerTemplates.xaml" />
                <ResourceDictionary Source="/CSRefactorCurio;component/Styles/MenuStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </platform:DialogWindow.Resources>

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ToolBar toolkit:Themes.UseVsTheme="True">
            <Label Margin="2" Content="{glob:Translate AddColon=True, ResourceKey=REPORT_CHOOSE_RESULT_TYPE}" />
            <ComboBox
                Width="150"
                Margin="2"
                toolkit:Themes.UseVsTheme="True"
                ItemsSource="{Binding Reports, Mode=OneWay}"
                SelectedItem="{Binding SelectedReport, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
        </ToolBar>

